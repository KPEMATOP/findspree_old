												  //custom view file for you links appearance
												  'url'         => \yii\helpers\Url::to([
																							'event/view',
																							'id' => $event->id
																						], true),
												  'image'       => $event->getImage(\common\models\Event::IMAGE_MAIN, [
													  'onlyLink'    => true,
													  'absoluteUrl' => true
												  ])
											  ]);; ?>
		</span>
