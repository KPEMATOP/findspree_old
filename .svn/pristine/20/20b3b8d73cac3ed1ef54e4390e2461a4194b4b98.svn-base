<div class="event-item-wide <% itemStyle ? print(itemStyle) : ''%>">
    <a href="<%= link.view %>">
        <div class="row">
            <img src="<%=img.main%>" class="img-responsive"/>
        </div>
        <div class="event-item-wide-body">
            <div class="event-item-wide-description">
                <h5><%=name%></h5>
                <%=description%>
            </div>
        </div>
    </a>
</div>