#map{
    height: 200px;
}

.msg_cnt {
    outline: none;
    border-bottom: 1px solid #eee;
    min-height: 50px;
}

.event-descr-edit {
    margin-right: 50px; color: #777; cursor: pointer; opacity: 0.2;
}

.text-muted-edit {
    outline: none;
    border-bottom: 2px solid rgb(101, 167, 223);
    color: #000;
}
.event-cover{
    position: relative;
}
.event-status {
    position: absolute;
    height: 30px;
    left: -5px;
    right: -5px;
    top: 5px;
    background-color: #53B654;
    text-align: center;
    line-height: 30px;
    text-transform: uppercase;
    font-weight: bold;
    text-shadow: 0px 0px 0px #000000;
    color: #333;
}
.event-buttons {
    bottom: 10px;
    left: -3px;
    height: 40px;
    background-color: #FFF;
    right: -3px;
    padding: 0 10px;
    text-align: center;
    line-height: 40px;
    font-size: 16px;
    transition: ease-out .3s ;
}
.event-buttons:hover{
    opacity: .9;
}
.event-buttons .md{
    cursor: pointer;
    color: #333;
}
