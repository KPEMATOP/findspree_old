.user-view-head{
    min-height: 200px;
    width: 100%;
    display: table;
}
.user-view-avatar{
    overflow: hidden;
    text-align: center;
    vertical-align: middle;
    margin: 0;
    padding: 0;
    display: table-cell;
    height: 200px;
    line-height: 0px;
    width: 200px;
    background:#6CA0A9;;
    font-size: 150px;
    position: relative;
}
.user-view-avatar>.user-avatar{
    min-width: 80px;
    display: initial;
}
.user-view-main-info{
    display: table-cell;
    height: 200px;
    margin-left: 200px;
    padding: 5px 10px;
    position: relative;
}
#user-view-edit-avatar{
    transition: ease, .2s, all;
    position: absolute;
    font-size: 20px;
    bottom: -100%;
    left: 0;
    display: inline;
    background: rgba(40,40,40,0.7);
    width: 100%;
    height: 100%;
    line-height: 40px;
    color: #DDD;
}
.user-view-avatar:hover #user-view-edit-avatar{
    bottom: 0;
}
#user-view-edit-avatar > a{
    text-decoration: none;
    color:inherit;
}
.subscribe-users .user-from{
    position: absolute;
    right: 8px;
    top: 8px;
}
.subscribe-users .user-to{
    position: absolute;
    left: 8px;
    bottom: 8px;
}